{
    "name": "sastreo/ormeig",
    "description": "ORM simple.",
    "version": "1.0.0",
    "type": "library",
    "license": "Unlicense",
    "authors": [
        {
            "name": "Oriol Sastre Rienitz",
            "email": "oriol.sastre@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "autoload": {
        "psr-4": {
            "Sastreo\\Ormeig\\": "src/"
        },
        "classmap": [
            "src/logic/Logic.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Sastreo\\Ormeig\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests --display-all-issues --colors=always",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "stan-test": "phpstan analyse -c phpstan.neon tests",
        "cs-fixer": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-fixer-check": "php-cs-fixer check --config=.php-cs-fixer.dist.php -vv"
    }
}